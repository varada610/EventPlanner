<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="edu.scu.project.eventplanner.EventDetails">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_event_details" />

    <TextView
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:id="@+id/title"        android:text="Event Details:"
        android:fontFamily="sans-serif-medium"
        android:textStyle="italic"        android:textSize="25dp"
        android:textColor="#1d299f"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"/>

    <GridLayout
        android:layout_width="match_parent"        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:columnCount="4"
        android:rowCount="6"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:text="Name :"            android:layout_columnSpan="2"
            android:textSize="20dp"            android:id="@+id/name"
            android:textColor="#000"
            android:layout_rowSpan="1"/>

        <TextView
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:text=" Event name"            android:textSize="20sp"
            android:textColor="#000"            android:id="@+id/namevalue"
            android:layout_columnSpan="2"
            android:layout_rowSpan="1" />

        <TextView
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:text="Type :"
            android:layout_marginTop="30dp"
            android:textSize="20dp"            android:id="@+id/type"
            android:textColor="#000"            android:layout_columnSpan="2"
            android:layout_rowSpan="1"/>

        <TextView
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:text="type"            android:textSize="20dp"
            android:textColor="#000"            android:gravity="center"
            android:id="@+id/typeView"            android:layout_columnSpan="2"
            android:layout_rowSpan="1"            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:text="Location :"            android:layout_marginTop="20dp"
            android:textSize="20dp"            android:id="@+id/loc"
            android:textColor="#000"            android:layout_columnSpan="2"
            android:layout_rowSpan="1"/>

        <TextView
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:text="location "            android:textSize="20dp"
            android:textColor="#000"            android:gravity="center"
            android:id="@+id/locvalue"            android:layout_columnSpan="2"
            android:layout_rowSpan="1"            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:text="Date :"            android:layout_marginTop="20dp"
            android:textSize="20dp"            android:id="@+id/date"
            android:textColor="#000"            android:layout_columnSpan="2"
            android:layout_rowSpan="1"/>

        <TextView
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:text=" date"            android:textSize="20dp"
            android:textColor="#000"            android:gravity="center"
            android:id="@+id/datevalue"            android:layout_columnSpan="2"
            android:layout_rowSpan="1"            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:text="Priority :"            android:layout_marginTop="20dp"
            android:textSize="20dp"            android:id="@+id/priority"
            android:textColor="#000"            android:layout_columnSpan="2"
            android:layout_rowSpan="1"/>

        <TextView
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:text="-L / M / H- "            android:textSize="20dp"
            android:textColor="#000"            android:gravity="center"
            android:id="@+id/privalue"            android:layout_columnSpan="2"
            android:layout_rowSpan="1"            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:text="Color :"            android:layout_marginTop="20dp"
            android:textSize="20dp"            android:id="@+id/color"
            android:textColor="#000"            android:layout_columnSpan="2"
            android:layout_rowSpan="1"/>

        <TextView
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:text="color value "            android:textSize="20dp"
            android:textColor="#000"            android:gravity="center"
            android:id="@+id/colvalue"            android:layout_columnSpan="2"
            android:layout_rowSpan="1"            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="wrap_content"        android:layout_height="wrap_content"
            android:gravity="center"            android:layout_below="@+id/type"
            android:layout_rowSpan="1"            android:layout_columnSpan="2"
            android:layout_marginTop="35dp"            android:text="Delete"
            android:id="@+id/delete"            android:textSize="18dp"/>

        <Button
            android:layout_width="wrap_content"        android:layout_height="wrap_content"
            android:gravity="center"            android:layout_below="@+id/type"
            android:layout_rowSpan="1"            android:layout_columnSpan="2"
            android:layout_marginTop="35dp"            android:text="Modify"
            android:id="@+id/update"            android:textSize="18dp"
            android:layout_marginLeft="65dp"/>


    </GridLayout>

</android.support.design.widget.CoordinatorLayout>
